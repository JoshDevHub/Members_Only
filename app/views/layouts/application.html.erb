<!DOCTYPE html>
<html>
  <head>
    <title>MembersOnly</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body>
    <% if flash[:notice] %>
      <p><%= notice %></p>
    <% end %>

    <% if flash[:alert] %>
      <p><%= alert %></p>
    <% end %>

    <header>
      <nav>
        <% if user_signed_in? %>
          <p><%= link_to current_user.username, edit_user_registration_path %></p>
          <p>
            <%= button_to 'Logout',
                destroy_user_session_path,
                method: :delete,
                data: { turbo: false }
            %>
          </p>
        <% else %>
          <p><%= link_to 'Sign In', new_user_session_path, data: { turbo: false } %></p>
          <p><%= link_to 'Sign Up', new_user_registration_path %></p>
        <% end %>
      </nav>
    </header>

    <%= yield %>
  </body>
</html>

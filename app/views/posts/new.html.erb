<h1 class="form-header">New Post</h1>

<%= form_with model: @post, html: { class: "post-form" } do |form| %>
  <div class="post-form__controls">
    <%= form.label :title, class: "post-form__label" %>
    <%= form.text_field :title, class: "post-form__text" %>
  </div>

  <div class="post-form__controls">
    <%= form.label :body, class: "post-form__label" %>
    <%= form.text_area :body, class: "post-form__textarea" %><br>
  </div>

  <div>
    <%= form.submit class: 'btn btn--primary' %>
  </div>
<% end %>
